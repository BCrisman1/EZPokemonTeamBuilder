<Window x:Class="EZPokemonTeamBuilder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EZPokemonTeamBuilder"
        xmlns:viewModels="clr-namespace:EZPokemonTeamBuilder.ViewModels"
        mc:Ignorable="d"
        DataContext="{StaticResource mainWindowViewModel}"
        Background="Gray" WindowState="Maximized"
        Title="MainWindow" Height="450" Width="800">

    <Viewbox HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <ContentControl Content="{Binding Path=View}" Margin="10" />
    </Viewbox>
</Window>
